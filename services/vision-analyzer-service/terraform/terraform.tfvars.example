# ==============================================================================
# VISION ANALYZER SERVICE - TERRAFORM VARIABLES
# ==============================================================================
# Copy this file to terraform.tfvars and fill in your values
# ==============================================================================

project_id   = "your-gcp-project-id"
region       = "europe-west4"        # Cloud Run region
gemini_location = "us-central1"      # Gemini/Vertex AI region
environment  = "dev"                 # or "prod"
service_name = "vision-analyzer-service"

# Image from Artifact Registry (set by CI/CD)
image_name = "europe-west4-docker.pkg.dev/your-project-id/copycat-docker/vision-analyzer-service:latest"

# Scaling configuration
min_instances = 0  # Scale to zero when idle
max_instances = 10 # Limit concurrent video processing

# Resource limits (higher for video analysis)
cpu    = "2"    # 2 vCPU
memory = "2Gi"  # 2GB RAM

# Request configuration
timeout_seconds = 600 # 10 minutes for long videos
concurrency     = 1   # Process one video at a time per instance
