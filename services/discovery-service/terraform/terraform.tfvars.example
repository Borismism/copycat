# ==============================================================================
# DISCOVERY SERVICE - TERRAFORM VARIABLES
# ==============================================================================
# Copy this file to terraform.tfvars and fill in your values
# ==============================================================================

project_id        = "your-gcp-project-id"
region            = "europe-west4"    # Cloud Run region
scheduler_region  = "europe-west1"    # Cloud Scheduler region
environment       = "dev"             # or "prod"
service_name      = "discovery-service"

# Image from Artifact Registry (set by CI/CD)
image_name = "europe-west4-docker.pkg.dev/your-project-id/copycat-docker/discovery-service:latest"

# Scaling configuration
min_instances = 0  # Scale to zero when idle
max_instances = 5  # Limit concurrent discovery runs

# Resource limits
cpu    = "1"
memory = "512Mi"

# Request configuration
timeout_seconds = 1800 # 30 minutes for full discovery run
concurrency     = 1    # Run one discovery at a time

# YouTube API Configuration
youtube_daily_quota     = "10000" # Default quota (request increase if needed)
youtube_default_region  = "US"    # Target region for discovery

# Cloud Scheduler Configuration
# Quota is automatically calculated per run based on:
# - Remaining daily quota
# - Hours left until midnight UTC
# - Ensures perfect 100% quota utilization
discovery_schedule = "0 * * * *" # Every hour at minute 0
